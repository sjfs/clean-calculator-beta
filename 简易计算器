V0：
#include<stdio.h>
int main()
{
	char strEXP[]="3+4";
	int a,b;
	a=strEXP[0]-'0';
	b=strEXP[2]-'0';
	printf("3+4=%d\n",a+b);
  return 0;
} 


V1：
#include<stdio.h>
#include<string.h>
int main()
{
	char strEXP[]="1+2+2+1+2+5+4-1-3+4-8";
	int i;
	int a=strEXP[0]-'0';
	for(i=1;i<strlen(strEXP);i++)
	{
		if(strEXP[i]=='+')
		{
			a=a+(strEXP[i+1]-'0');
			i++;
		}
		if(strEXP[i]=='-')
		{
			a=a-(strEXP[i+1]-'0');
			i++;
		}
	} 
	printf("结果为:%d\n",a);
	return 0;
} 


V2:
#include<stdio.h>
#include<string.h>
int main()
{
	char strEXP[]="2*2/4*1/1*2*3/2";
	int i;
	int a=strEXP[0]-'0';
	for(i=1;i<strlen(strEXP);i++)
	{
		if(strEXP[i]=='*')
		{
			a=a*(strEXP[i+1]-'0');
			i++;
		}
		if(strEXP[i]=='/')
		{
			a=a/(strEXP[i+1]-'0');
			i++;
		}
	} 
	printf("结果为:%d\n",a);
	return 0;
} 


V3:
#include<stdio.h>
#include<string.h>
int main()
{
	char strEXP[]="2+2*3+2/2-1";
	int a;
	int i,b=0,sum=0;
	for(i=1;i<strlen(strEXP);i++)
	{
		if(strEXP[i]=='*')
		{
			b=(strEXP[i-1]-'0')*(strEXP[i+1]-'0');
			sum=sum+b;
			strEXP[i-1]='0';
			strEXP[i+1]='0';
			i++;
		}
		if(strEXP[i]=='/')
		{
			b=(strEXP[i-1]-'0')/(strEXP[i+1]-'0');
			sum=sum+b;
			strEXP[i-1]='0';
			strEXP[i+1]='0';
			i++;
		}
	} 
	for(i=1;i<strlen(strEXP);i++)
	{
		if(strEXP[i]=='+')
		{
			a=(strEXP[i-1]-'0')+(strEXP[i+1]-'0');
			sum=sum+a;
			i++;
		}
		if(strEXP[i]=='-')
		{
			a=(strEXP[i-1]-'0')-(strEXP[i+1]-'0');
			sum=sum+a;
			i++;
		}
	} 
	printf("结果为:%d\n",sum);
	return 0;
} 
